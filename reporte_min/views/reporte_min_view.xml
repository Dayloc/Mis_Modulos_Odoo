<odoo>
    <record id="view_reporte_min_form" model="ir.ui.view">
        <field name="name">reporte.min.form</field>
        <field name="model">reporte.min</field>
        <field name="arch" type="xml">
            <form string="Reporte Min">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="description"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_reporte_min_tree" model="ir.ui.view">
        <field name="name">reporte.min.list</field>
        <field name="model">reporte.min</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="action_reporte_min" model="ir.actions.act_window">
        <field name="name">Reporte Min</field>
        <field name="res_model">reporte.min</field>
        <field name="view_mode">list,form</field>
    </record>

    <menuitem id="menu_reporte_min_root" name="Reporte Min"/>
    <menuitem id="menu_reporte_min"
              name="Reportes"
              parent="menu_reporte_min_root"
              action="action_reporte_min"/>
</odoo>
