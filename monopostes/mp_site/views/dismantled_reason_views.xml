<odoo>

    <record id="view_mp_site_dismantled_reason_list" model="ir.ui.view">
        <field name="name">mp.site.dismantled.reason.list</field>
        <field name="model">mp.site.dismantled.reason</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence"/>
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mp_site_dismantled_reason_form" model="ir.ui.view">
        <field name="name">mp.site.dismantled.reason.form</field>
        <field name="model">mp.site.dismantled.reason</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="sequence"/>
                        <field name="active"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mp_site_dismantled_reason" model="ir.actions.act_window">
        <field name="name">Motivos de desmontaje</field>
        <field name="res_model">mp.site.dismantled.reason</field>
        <field name="view_mode">list,form</field>
    </record>

</odoo>
