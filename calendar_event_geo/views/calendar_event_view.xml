<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_calendar_event_form_geo" model="ir.ui.view">
        <field name="name">calendar.event.form.geo</field>
        <field name="model">calendar.event</field>
        <field name="inherit_id" ref="calendar.view_calendar_event_form"/>
        <field name="arch" type="xml">

            <!-- Insertamos un grupo nuevo dentro del formulario -->
            <xpath expr="//sheet" position="inside">
                <group string="Geolocalización">

                    <!-- Usamos el campo estándar -->
                    <field name="location"
                           string="Dirección de la reunión"
                           placeholder="Calle, número, ciudad, código postal"/>

                    <button
                        name="action_geocode_planned_location"
                        type="object"
                        string="Geolocalizar reunión"
                        class="oe_highlight"/>

                    <field name="planned_latitude" readonly="1"/>
                    <field name="planned_longitude" readonly="1"/>


                </group>
            </xpath>

        </field>
    </record>

</odoo>