<odoo>
    <record id="view_saes_import_config_form" model="ir.ui.view">
        <field name="name">saes.import.config.form</field>
        <field name="model">saes.import.config</field>
        <field name="arch" type="xml">
            <form string="Configuración Importador SAE">
                <header>

                    <button name="action_test_connection"
                            icon="fa-plug"
                            string="Probar conexión PostgreSQL"
                            type="object"
                            class="btn-primary btn-sm"
                            invisible="db_type != 'postgres'"/>

                    <button name="action_check_clients"
                            icon="fa-list"
                            string="Contar clientes"
                            type="object"
                            class="btn-secondary btn-sm"
                            invisible="not import_clientes"/>

                    <button name="action_preview_clients"
                            icon="fa-eye"
                            string="Preview clientes"
                            type="object"
                            class="btn-info btn-sm"
                            invisible="not import_clientes"/>
                    <button name="action_import_clients"
                            icon="fa-upload"
                            string="Importar clientes"
                            type="object"
                            class="btn-success btn-sm"
                            invisible="not import_clientes"/>
                    <button name="action_preview_addresses"
                            icon="fa-map-marker"
                            string="Preview direcciones"
                            type="object"
                            class="btn-warning btn-sm"
                            invisible="not import_direcciones"/>
                    <button name="action_test_sqlserver_connection"
                            icon="fa-database"
                            string="Probar conexión SQL Server"
                            type="object"
                            class="btn-primary btn-sm"
                            invisible="db_type != 'sqlserver'"/>

                </header>
                <sheet>
                    <group string="Origen de datos">
                        <field name="db_type" widget="radio"/>
                    </group>


                    <group string="Conexión PostgreSQL"
                           invisible="db_type != 'postgres'">
                        <field name="host"/>
                        <field name="port"/>
                        <field name="database"/>
                        <field name="user"/>
                        <field name="password" password="True"/>
                    </group>
                    <group string="Conexión SQL Server"
                           invisible="db_type != 'sqlserver'">
                        <field name="host"/>
                        <field name="database"/>
                        <field name="user"/>
                        <field name="password" password="True"/>
                    </group>


                    <group string="¿Qué deseas importar?">
                        <field name="import_clientes"/>
                        <field name="import_direcciones"/>
                        <field name="import_proveedores"/>
                    </group>

                </sheet>
            </form>
        </field>
    </record>


    <record id="view_saes_import_config_tree" model="ir.ui.view">
        <field name="name">saes.import.config.list</field>
        <field name="model">saes.import.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="db_type"/>
                <field name="host"/>
                <field name="database"/>
                <field name="import_clientes"/>
                <field name="import_direcciones"/>
                <field name="import_proveedores"/>
            </list>
        </field>
    </record>
</odoo>
