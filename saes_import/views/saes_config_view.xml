<odoo>
    <record id="view_saes_import_config_form" model="ir.ui.view">
        <field name="name">saes.import.config.form</field>
        <field name="model">saes.import.config</field>
        <field name="arch" type="xml">
            <form string="Configuración Importador SAGES">

                <header>
                    <button name="action_detect_tables"
                            string="Detectar tablas existentes"
                            type="object"
                            icon="fa-database"
                            class="btn-primary"/>
                    <div class="o_dropdown">
                        <a class="btn btn-info   o_dropdown_toggle"
                           data-bs-toggle="dropdown"
                           role="button">
                            <i class="fa fa-users me-1"/>
                            Clientes
                        </a>
                        <div class="dropdown-menu">
                            <button name="action_detect_client_tables"
                                    type="object"
                                    string="Detectar tablas candidatas"
                                    icon="fa-search"
                                    class="dropdown-item"/>
                            <button name="action_choose_client_table"
                                    type="object"
                                    string="Elegir tabla clientes"
                                    icon="fa-table"
                                    class="dropdown-item"/>
                            <button name="action_preview_clients"
                                    type="object"
                                    string="Preview clientes (lectura)"
                                    icon="fa-eye"
                                    class="dropdown-item"/>
                        </div>
                    </div>

                    <div class="o_dropdown">
                        <a class="btn btn-warning   o_dropdown_toggle"
                           data-bs-toggle="dropdown"
                           role="button">
                            <i class="fa fa-truck me-1"/>
                            Proveedores
                        </a>

                        <div class="dropdown-menu">
                            <button name="action_detect_provider_tables"
                                    type="object"
                                    string="Detectar tablas candidatas"
                                    icon="fa-search"
                                    class="dropdown-item"/>

                            <button name="action_choose_provider_table"
                                    type="object"
                                    string="Elegir tabla proveedores"
                                    icon="fa-table"
                                    class="dropdown-item"/>

                            <button name="action_preview_providers"
                                    type="object"
                                    string="Preview proveedores (lectura)"
                                    icon="fa-eye"
                                    class="dropdown-item"/>
                        </div>
                    </div>


                    <div class="o_dropdown">
                        <a class="btn btn-success   o_dropdown_toggle"
                           data-bs-toggle="dropdown"
                           role="button">
                            <i class="fa fa-cube me-1"/>
                            Productos
                        </a>

                        <div class="dropdown-menu">
                            <button name="action_detect_product_tables"
                                    type="object"
                                    string="Detectar tablas candidatas"
                                    icon="fa-search"
                                    class="dropdown-item"/>

                            <button name="action_choose_product_table"
                                    type="object"
                                    string="Elegir tabla de productos"
                                    icon="fa-table"
                                    class="dropdown-item"/>

                            <button name="action_preview_products"
                                    type="object"
                                    string="Preview productos (lectura)"
                                    icon="fa-eye"
                                    class="dropdown-item"/>
                        </div>
                    </div>
                    <div class="o_dropdown">
                        <a class="btn btn-primary  o_dropdown_toggle"
                           data-bs-toggle="dropdown"
                           role="button">
                            <i class="fa fa-shopping-cart me-1"/>
                            Pedidos
                        </a>

                        <div class="dropdown-menu">

                            <button name="action_detect_sale_order_tables"
                                    type="object"
                                    string="Detectar tablas candidatas"
                                    icon="fa-search"
                                    class="dropdown-item"/>

                            <button name="action_choose_sale_order_table"
                                    type="object"
                                    string="Elegir tabla de pedidos"
                                    icon="fa-table"
                                    class="dropdown-item"/>

                            <button name="action_preview_sale_orders"
                                    type="object"
                                    string="Preview pedidos (lectura)"
                                    icon="fa-eye"
                                    class="dropdown-item"/>


                        </div>
                    </div>
                    <div class="o_dropdown">
                        <a class="btn   o_dropdown_toggle"
                           style="background: #2e2e56"
                           data-bs-toggle="dropdown"
                           role="button">
                            <i class="fa fa-list me-1"/>
                            Líneas de pedido
                        </a>

                        <div class="dropdown-menu">

                            <button name="action_detect_sale_order_line_tables"
                                    type="object"
                                    string="Detectar tablas candidatas"
                                    icon="fa-search"
                                    class="dropdown-item"/>

                            <button name="action_choose_sale_order_line_table"
                                    type="object"
                                    string="Elegir tabla de líneas"
                                    icon="fa-table"
                                    class="dropdown-item"/>

                            <button name="action_preview_sale_order_lines"
                                    type="object"
                                    string="Preview líneas (lectura)"
                                    icon="fa-eye"
                                    class="dropdown-item"/>


                        </div>
                    </div>
                    <div class="o_dropdown dropdown">
                        <a class="btn o_dropdown_toggle"
                           style="background: #2C3E50;color:white;"
                           data-bs-toggle="dropdown"
                           role="button">
                            <i class="fa fa-file me-1"/>
                            Facturas
                        </a>

                        <div class="dropdown-menu p-0" style="min-width:300px;">


                            <div class="dropdown-header fw-bold "
                            style="background: #2C3E50;color:white;">
                                <i class="fa fa-file-text-o me-1"/>
                                Facturas de venta
                            </div>


                            <button name="action_detect_sale_invoice_tables"
                                    type="object"
                                    icon="fa-search"
                                    string="Detectar tablas (venta)"
                                    class="dropdown-item"/>

                            <button name="action_choose_sale_invoice_table"
                                    type="object"
                                    icon="fa-table"
                                    string="Elegir tabla (venta)"
                                    class="dropdown-item"/>

                            <button name="action_preview_sale_invoices"
                                    type="object"
                                    icon="fa-eye"
                                    string="Preview facturas (venta)"
                                    class="dropdown-item"/>


                            <div class="dropdown-divider"/>
                            <div style="background: #2C3E50;color:white;">
                                <button name="action_detect_sale_invoice_line_tables"
                                        type="object"
                                        icon="fa-search"
                                        string="Detectar líneas factura (venta)"
                                        class="dropdown-item text-black"/>

                                <button name="action_choose_sale_invoice_line_table"
                                        type="object"
                                        string="Elegir líneas factura (venta)"
                                        icon="fa-table"
                                        class="dropdown-item text-black"
                                        context="{'invoice_type': 'sale'}"/>

                                <button name="action_preview_invoice_lines"
                                        type="object"
                                        icon="fa-eye"
                                        string="Preview líneas factura (venta)"
                                        class="dropdown-item text-black"
                                        context="{'invoice_type': 'sale'}"/>
                            </div>


                            <div class="dropdown-divider"/>


                            <div class="dropdown-header fw-bold "
                                style="background: #2C3E50;color:white;">
                                <i class="fa fa-file-text-o me-1"/> Facturas de compra
                            </div>


                            <button name="action_detect_purchase_invoice_tables"
                                    type="object"
                                    icon="fa-search"
                                    string="Detectar tablas (compra)"
                                    class="dropdown-item"/>

                            <button name="action_choose_purchase_invoice_table"
                                    type="object"
                                    icon="fa-table"
                                    string="Elegir tabla (compra)"
                                    class="dropdown-item"/>

                            <button name="action_preview_purchase_invoices"
                                    type="object"
                                    icon="fa-eye"
                                    string="Preview facturas (compra)"
                                    class="dropdown-item"/>


                            <div class="dropdown-divider"/>
                            <div style="background: #2C3E50;color:white;">
                                <button name="action_detect_purchase_invoice_line_tables"
                                        type="object"
                                        icon="fa-search"
                                        string="Detectar líneas factura (compra)"
                                        class="dropdown-item  text-black"/>

                                <button name="action_choose_purchase_invoice_line_table"
                                        type="object"
                                        string="Elegir líneas factura (compra)"
                                        icon="fa-table"
                                        class="dropdown-item text-black"
                                        context="{'invoice_type': 'purchase'}"/>

                                <button name="action_preview_invoice_lines"
                                        type="object"
                                        string="Preview líneas factura (compra)"
                                        icon="fa-eye"
                                        class="dropdown-item text-black"
                                        context="{'invoice_type': 'purchase'}"/>
                            </div>


                        </div>
                    </div>


                    <div class="o_dropdown">
                        <a class="btn btn-info o_dropdown_toggle"
                           data-bs-toggle="dropdown"
                           role="button"
                           invisible="not (import_clientes or import_direcciones or import_proveedores or import_productos or import_pedidos)">
                            ▼ IMPORTAR
                        </a>

                        <div class="dropdown-menu shadow">


                            <button
                                    name="action_import_all_clients"
                                    type="object"
                                    class="dropdown-item text-info"
                                    invisible="not import_clientes"
                                    confirm="⚠️ Esto importará TODOS los clientes. ¿Deseas continuar?">
                                <i class="fa fa-users me-2"/> Importar clientes
                            </button>


                            <button
                                    name="action_import_all_providers"
                                    type="object"
                                    class="dropdown-item text-warning"
                                    invisible="not import_proveedores"
                                    confirm="⚠️ Esto importará todos los proveedores. ¿Deseas continuar?">
                                <i class="fa fa-truck me-2"/> Importar proveedores
                            </button>


                            <button
                                    name="action_import_products"
                                    type="object"
                                    class="dropdown-item text-success"
                                    invisible="not import_productos"
                                    confirm="⚠️ Esto importará todos los productos. ¿Deseas continuar?">
                                <i class="fa fa-cube me-2"/> Importar productos
                            </button>


                        </div>
                    </div>


                </header>

                <sheet>
                    <group col="2">
                        <group string="Origen de datos">
                            <field name="db_type" widget="radio"/>
                        </group>
                        <group string="Conexión">

                            <group invisible="db_type != 'postgres'">
                                <separator string="PostgreSQL"/>
                                <field name="host"/>
                                <field name="port"/>
                                <field name="database"/>
                                <field name="user"/>
                                <field name="password" password="True"/>
                            </group>

                            <group invisible="db_type != 'sqlserver'">
                                <separator string="SQL Server"/>
                                <field name="host"/>
                                <field name="database"/>
                                <field name="user"/>
                                <field name="password" password="True"/>
                            </group>

                        </group>

                    </group>

                    <group>
                        <group string="Tablas seleccionadas">
                            <field name="client_table" readonly="1" class="text-primary"/>
                            <field name="provider_table" readonly="1" class="text-primary"/>
                            <field name="product_table" readonly="1" class="text-primary"/>
                            <field name="sale_order_table" readonly="1" class="text-primary"/>
                            <field name="sale_order_line_table" readonly="1" class="text-primary"/>
                            <field name="sale_invoice_table" readonly="1" class="text-primary"/>
                            <field name="purchase_invoice_table" readonly="1" class="text-primary"/>

                        </group>
                        <group string="¿Qué deseas importar?">
                            <field name="import_clientes"/>
                            <field name="import_direcciones"/>
                            <field name="import_proveedores"/>
                            <field name="import_pedidos"/>
                            <field name="import_productos"/>
                            <field name="import_sale_invoice"/>
                            <field name="import_purchase_invoice"/>
                        </group>
                    </group>


                </sheet>


            </form>
        </field>
    </record>

    <record id="view_saes_import_config_tree" model="ir.ui.view">
        <field name="name">saes.import.config.list</field>
        <field name="model">saes.import.config</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="db_type"/>
                <field name="host"/>
                <field name="database"/>
                <field name="import_clientes"/>
                <field name="import_direcciones"/>
                <field name="import_proveedores"/>

            </list>
        </field>
    </record>
</odoo>
