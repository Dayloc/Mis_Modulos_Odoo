<odoo>
    <record id="view_saes_invoice_table_selector_form" model="ir.ui.view">
        <field name="name">saes.invoice.table.selector.form</field>
        <field name="model">saes.invoice.table.selector</field>
        <field name="arch" type="xml">
            <form string="Elegir tabla de facturas">
                <group>
                    <field name="table_id" widget="radio"/>
                </group>

                <footer>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"/>

                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>

                    <button name="action_preview_raw"
                            type="object"
                            string="Preview RAW (estructura real)"
                            icon="fa-database"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
