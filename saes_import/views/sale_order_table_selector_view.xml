<odoo>
    <record id="view_sale_order_table_selector_form" model="ir.ui.view">
        <field name="name">sale.order.table.selector.form</field>
        <field name="model">sale.order.table.selector</field>
        <field name="arch" type="xml">
            <form string="Elegir tabla de pedidos">
                <sheet>
                    <group>
                        <field name="table_id" widget="radio"/>
                    </group>
                </sheet>

                <footer>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            special="cancel"
                            class="btn-secondary"/>
                     <button name="action_preview_sale_orders_raw"
                                    type="object"
                                    string="Preview pedidos RAW (debug)"
                                    icon="fa-database"
                                    class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
