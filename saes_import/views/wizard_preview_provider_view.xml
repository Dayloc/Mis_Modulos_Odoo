<odoo>
    <record id="view_saes_provider_preview_wizard" model="ir.ui.view">
        <field name="name">saes.provider.preview.wizard.form</field>
        <field name="model">saes.provider.preview.wizard</field>
        <field name="arch" type="xml">
            <form string="Preview RAW Proveedores">
                <group>
                    <field name="preview_text" nolabel="1" readonly="1"
                           style="white-space: pre-wrap; font-family: monospace;"
                    />
                </group>
                <footer>
                    <button string="Cerrar" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
