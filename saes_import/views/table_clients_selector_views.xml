<odoo>
    <record id="view_saes_table_selector_form" model="ir.ui.view">
        <field name="name">saes.table.selector.form</field>
        <field name="model">saes.table.selector</field>
        <field name="arch" type="xml">
            <form string="Elegir tabla de clientes">
                <group>
                    <field name="table_id" widget="radio"/>
                </group>

                <footer>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>


        </field>
    </record>
</odoo>
