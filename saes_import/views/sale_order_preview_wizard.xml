<odoo>
    <record id="view_saes_sale_order_preview_wizard" model="ir.ui.view">
        <field name="name">saes.sale.order.preview.wizard.form</field>
        <field name="model">saes.sale.order.preview.wizard</field>
        <field name="arch" type="xml">
            <form string="Preview pedidos" class="o_form_large">
                <sheet>
                    <field name="preview_html" nolabel="1" readonly="1"/>
                </sheet>
                <footer>
                    <button string="Cerrar"
                            special="cancel"
                            class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
