<odoo>
    <record id="view_saes_client_preview_wizard" model="ir.ui.view">
        <field name="name">saes.client.preview.wizard.form</field>
        <field name="model">saes.client.preview.wizard</field>
        <field name="arch" type="xml">
            <form string="Preview de clientes SAE">
                <sheet>
                    <field name="preview_text" nolabel="1"
                           widget="text" readonly="1"/>
                </sheet>
                <footer>
                    <button string="Cerrar"
                            class="btn-secondary"
                            special="cancel"/>
                    <button
                            name="action_preview_raw"
                            type="object"
                            string="Preview RAW (estructura real)"
                            icon="fa-database"
                            class="btn-secondary"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
