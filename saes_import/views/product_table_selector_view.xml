<odoo>
    <record id="view_product_table_selector_form" model="ir.ui.view">
        <field name="name">product.table.selector.form</field>
        <field name="model">product.table.selector</field>
        <field name="arch" type="xml">
            <form string="Elegir tabla de productos">
                <group>
                    <field name="table_id" widget="radio"/>
                </group>
                <footer>
                    <button name="action_confirm"
                            string="Confirmar"
                            type="object"
                            class="btn-primary"/>
                    <button string="Cancelar"
                            class="btn-secondary"
                            special="cancel"/>
                    <button
                            name="action_preview_raw"
                            type="object"
                            string="Preview RAW (estructura real)"
                            icon="fa-database"
                            class="btn-secondary"
                    />
                </footer>
            </form>
        </field>
    </record>
</odoo>
