<odoo>
    <record id="view_saes_detected_tables_wizard_form" model="ir.ui.view">
        <field name="name">saes.detected.tables.wizard.form</field>
        <field name="model">saes.detected.tables.wizard</field>
        <field name="arch" type="xml">
            <form string="Tablas detectadas" class="o_form_large">
                <sheet>

                    <group colspan="100">
                        <div style="max-height: 300px; overflow-y: auto;">
                            <field name="selected_table_id"
                                   widget="radio"
                                   options="{'horizontal': false}"
                                   domain="[('wizard_id', '=', id)]"/>
                        </div>
                    </group>


                    <separator string="Preview de la tabla"/>

                    <div style="height:360px; overflow-y:auto; margin-top:16px;">
                        <field name="preview_html" nolabel="1" readonly="1"/>
                    </div>

                </sheet>
                <footer>
                    <button string="Cerrar"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>

        </field>
    </record>
</odoo>
