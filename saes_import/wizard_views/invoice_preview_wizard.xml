<odoo>
    <record id="view_saes_invoice_preview_wizard_form" model="ir.ui.view">
        <field name="name">saes.invoice.preview.wizard.form</field>
        <field name="model">saes.invoice.preview.wizard</field>
        <field name="arch" type="xml">
            <form string="Preview facturas">
                <sheet>
                    <field name="preview_html" nolabel="1"/>
                </sheet>

                <footer>
                    <button string="Cerrar"
                            class="btn-secondary"
                            special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
